{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "homepage_url": "https://fleetyards.net",
  "{{chrome}}.permissions": ["cookies"],
  "{{firefox}}.permissions": [
    "cookies",
    "https://robertsspaceindustries.com/*"
  ],
  "{{chrome}}.host_permissions": ["https://robertsspaceindustries.com/*"],
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  }
}
